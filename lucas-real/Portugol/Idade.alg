algoritmo "semnome"

var
    ano_atual, ano_nascimento, idade: inteiro

inicio
    Escreva("Em que ano nós estamos?")
    Leia(ano_atual)
    Escreva("Em que ano você nasceu?")
    Leia(ano_nascimento)
    idade <-ano_atual - ano_nascimento
    Escreva("Minha idade atual é", idade, " anos")

// Seção de Comandos
fimalgoritmo
